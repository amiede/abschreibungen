source ./script/shellConfig/start-console
source ./script/shellConfig/start-javafx

eingabe(){
	read -p "Auswahl: " AUSWAHL;
}

text_auf_console() {

echo "W채hlen sie aus:"
echo
echo "1 - Konsolen ausgabe"
echo "2 - JavaFX GUI starten"
echo "0 - Beenden"
echo
eingabe
echo

auswahl

}

auswahl() {

# Ist die Auswahl Konsole
if [ $AUSWAHL -eq 1 ];
then
	isKonsoleGewaelt
# Ist die Auswahl das User Interface
elif [ $AUSWAHL -eq 2  ];
then
	isUserInterfacegewaelt
# Wurde beenden ausgew채hlt
elif [ $AUSWAHL -eq 0 ];
then
	isExit
# Eingabe nicht korrekt
else 
	isOther
fi
}

isKonsoleGewaelt(){
	echo "sie haben sich f체r die KonsolenAusgabe entschieden"

	maven_console_ausgeben
}

isUserInterfacegewaelt(){
	echo "sie haben sich f체r die UserInterface entschieden"

	maven_javafx_ausgeben
}
isExit(){
	echo "Augabe wird Beendet"	
	ending
}

isOther(){
	echo "ihre eingabe war falsch"
	ending
}

ending(){
	exit 0
}


text_auf_console

